<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_tp_objet_perdu" model="ir.actions.act_window">
        <field name="name">Objets Perdus</field>
        <field name="res_model">tp.objet.perdu</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu principal -->
    <menuitem id="menu_tp_objets_root" name="Objets Perdus" sequence="10"/>

    <!-- Sous-menu -->
    <menuitem id="menu_tp_objets"
              name="Gestion des Objets"
              parent="menu_tp_objets_root"
              action="action_tp_objet_perdu"
              sequence="10"/>

    <!-- Vue liste -->
    <record id="view_tp_objet_perdu_tree" model="ir.ui.view">
        <field name="name">tp.objet.perdu.tree</field>
        <field name="model">tp.objet.perdu</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type_objet"/>
                <field name="date_perte"/>
                <field name="lieu_perte"/>
                <field name="statut"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_tp_objet_perdu_form" model="ir.ui.view">
        <field name="name">tp.objet.perdu.form</field>
        <field name="model">tp.objet.perdu</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type_objet"/>
                        <field name="date_perte"/>
                        <field name="lieu_perte"/>
                        <field name="statut"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
